##########################################################################
# Purpose: to run the analysis for the Rapid Refresh Model
##########################################################################

# EXPORT list here

set -x
module load prod_util
module load prod_envir

module list

unset MPICH_RANK_REORDER_METHOD
export MP_MPILIB=mpich2
export KMP_AFFINITY=disabled
export MP_TASK_AFFINITY=core:1
export OMP_NUM_THREADS=2
#export FORT_BUFFERED=true

export numprocs=96
export NTASK=96
export PTILE=24

export envir=prod
export RUN_ENVIR=prod
export cyc=06
export cycle=t06z
export job=rap_analysis_pcyc_06
export group_name=meso

SMSNAME=%SMSNAME% export SMSNAME
SMSNODE=%SMSNODE% export SMSNODE
SMSPASS=%SMSPASS% export SMSPASS
SMS_PROG=%SMS_PROG% export SMS_PROG

SMSBIN=/meso/save/Benjamin.Blake/sms/bin export SMSBIN

# CALL executable job script here
. /gpfs/hps3/emc/meso/save/Benjamin.Blake/nwprod/versions/rap.ver
/gpfs/hps3/emc/meso/save/Benjamin.Blake/nwprod/rap.${rap_ver}/jobs/JRAP_ANALYSIS_PCYC 
# next step is to update the boundary conditions
bsub < /gpfs/hps3/emc/meso/save/Benjamin.Blake/nwprod/rap.${rap_ver}/sms/jrap_updatebc_pcyc_06.bsub
