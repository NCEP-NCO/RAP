LIB	= ../../libsfcio_4.a
INCMOD	= ../../incmod
FC	= mpif90
FFLAGS	= -O -FR -I$(INCMOD)
#FFLAGS	= -g -C -qextchk -qflttrap -qnosave -g -q free=f90 -I$(INCMOD)
AR	= ar
ARFLAGS	= -rv 

$(LIB):	$(LIB)(sfcio_module.o)
.f.a:
	$(FC) -c $(FFLAGS) $<
	$(AR) $(ARFLAGS) $@ $*.o
	rm -f $*.o
	mv $*.mod $(INCMOD)
