INCMOD  = ../../incmod
#LIB	= ./libsigio_4.a
#INCMOD	= ./incmod
FC	= mpif90
FFLAGS	= -O3 -FR -I$(INCMOD) -I/mnt/lfs0/projects/wrfruc/mhu/GSI/comGSI/test/release_V2/include
FFLAGB	= -O3 -FR -I$(INCMOD) -I/mnt/lfs0/projects/wrfruc/mhu/GSI/comGSI/test/release_V2/include
#FFLAGS	= -g -C -qextchk -qflttrap -qnosave -O3 -q free=f90 -I$(INCMOD)
#FFLAGB	= -g -C -qextchk -qflttrap -qnosave -O3 -q fixed 
AR	= ar
ARFLAGS	= -rv 

$(LIB):	$(LIB)(sigio_module.o) $(LIB)(sigio_r_module.o) $(LIB)(bafrio.o) 
$(LIB)(sigio_r_module.o):	$(LIB)(sigio_module.o)
$(LIB)(bafrio.o):	bafrio.f
	$(FC) -c $(FFLAGB) $<
	$(AR) $(ARFLAGS) $@ $*.o
	rm -f $*.o
.f.a:
	$(FC) -c $(FFLAGS) $<
	$(AR) $(ARFLAGS) $@ $*.o
	rm -f $*.o
	mv $*.mod $(INCMOD)
